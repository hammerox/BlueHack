<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_interest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hammerox.bluehack.InterestActivity"
    android:background="#333333">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/interest_toptext"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/interest_image1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/design_card"
            android:layout_marginTop="@dimen/card_padding"
            android:layout_marginBottom="@dimen/card_padding"/>

        <ImageView
            android:id="@+id/interest_image2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/coding_card"
            android:layout_marginTop="@dimen/card_padding"
            android:layout_marginBottom="@dimen/card_padding"/>

        <ImageView
            android:id="@+id/interest_image3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/history_card"
            android:layout_marginTop="@dimen/card_padding"
            android:layout_marginBottom="@dimen/card_padding"/>

    </LinearLayout>

</ScrollView>
