<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_interest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hammerox.bluehack.InterestActivity"
    android:background="#333333">

    <ScrollView
        android:id="@+id/interest_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="60dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/interest_toptext"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <FrameLayout
                android:id="@+id/interest_frame1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/card_padding"
                android:layout_marginBottom="@dimen/card_padding">

                <ImageView
                    android:id="@+id/interest_image1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/design_card"/>

                <ImageView
                    android:id="@+id/interest_okay1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    android:src="@drawable/overlay_card"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/interest_frame2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/card_padding"
                android:layout_marginBottom="@dimen/card_padding">

                <ImageView
                    android:id="@+id/interest_image2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/coding_card"/>

                <ImageView
                    android:id="@+id/interest_okay2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    android:src="@drawable/overlay_card"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/interest_frame3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/card_padding"
                android:layout_marginBottom="@dimen/card_padding">

                <ImageView
                    android:id="@+id/interest_image3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/history_card"/>

                <ImageView
                    android:id="@+id/interest_okay3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    android:src="@drawable/overlay_card"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/interest_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="PRONTO"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:padding="16dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
